// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Ranking {
  id             String   @id @default(cuid())
  nickname       String
  score          Int
  difficulty     String   // "easy" | "normal" | "hard"
  accuracy       Float
  wordsPerMinute Float
  totalWords     Int
  createdAt      DateTime @default(now())

  @@index([difficulty, score(sort: Desc)])
}

model Category {
  id          String   @id @default(cuid())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  words       Word[]
}

model Word {
  id          String   @id @default(cuid())
  text        String
  reading     String
  inputType   String   // "hiragana" | "alphabet"
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  weightEasy  Int      @default(1)
  weightNormal Int     @default(1)
  weightHard  Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categoryId])
}

model LigRanking {
  id           String   @id @default(cuid())
  nickname     String
  score        Int
  correctCount Int
  missCount    Int
  accuracy     Float
  totalMembers Int
  createdAt    DateTime @default(now())

  @@index([score(sort: Desc)])
}

model Member {
  id              String   @id @default(cuid())
  name            String   // 表示名（漢字など）
  nameReading     String   // 名前の読み（ひらがな）
  nickname        String?  // あだ名（表示用、任意）
  nicknameReading String?  // あだ名の読み（ひらがな、任意）
  photoData       String   // 写真（Base64 data URL）
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
